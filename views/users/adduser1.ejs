<%- include layouts/header.ejs %>

	<div class="page-data">
		<form method="post" action="/users/add">
			<table cellpadding="11">
				<tr>
					<td class="label">FirstName</td><td>:<input type="text" name="firstname" placeholder="ex.nani" required></td>

				</tr>
				<tr>
					<td class="label">LastName</td><td>:<input type="text" name="lastname" placeholder="ex.bheemireddi" required></td>
				</tr>
				<tr>
					<td class="label">Email</td><td>:<input type="text" name="email" placeholder="ex.nani560@gmail.com" required></td>
				</tr>
				
				<tr>
					<td class="label">Gender</td>
					<td>
					:<input type="radio" name="gender" value="male" required> Male
  					<input type="radio" name="gender" value="female" required> Female
  					<input type="radio" name="gender" value="other" required> Other
					</td>
				</tr>
				<tr>
					<td class="label">DOB</td>
					<td>:<input type="date" name="dob" placeholder="ex. yyyy/mm/dd" required></td>
				</tr>
				<tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
			</table>
		</form>
	</div>

<%- include layouts/footer.ejs %>